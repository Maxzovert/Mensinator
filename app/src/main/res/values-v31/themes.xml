<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mensinator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- COMPLETELY disable splash screen (Android 12+) -->
        <!--<item name="android:windowSplashScreenBehavior">0</item> <!- 0 = none -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>

        <!-- Prevent any background flash -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Kill legacy splash screen (Pre-Android 12) -->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>